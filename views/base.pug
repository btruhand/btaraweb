doctype html

html(lang="en")
	head
		title BtaraWeb
		meta(name="robots" content="index")
		meta(Content-type= "text/html" charset="UTF-8")
		meta(name="author", content="Btara Truhandarien")
		meta(name="description", content="Btara Truhandarien personal website")
		meta(name="keywords", content="Btara, Truhandarien, Btara Truhandarien, website, personal website, personal info")

		link(rel="icon", type="image/jpg", href="/public/img/logo1.jpg")
		link(rel="stylesheet", type="text/css", href="https://fonts.googleapis.com/css?family=Josefin+Sans")
		link(rel="stylesheet", type="text/css", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css")
		link(rel="stylesheet", type="text/css", href="/public/styles/reset.min.css")
		link(rel="stylesheet", type="text/css", href="/public/styles/base.min.css")
		block stylesheets
		script(src="/bower/jquery/dist/jquery.min.js")
		script(src="/public/js/general.min.js")
	body
		div.container.flex
			div.container.flex-vert.shadow-boxer#header
				div#logo-container
					div#logo
						div#image-logo
							img(src="/public/img/logo1.jpg")
							img(src="/public/img/logo2.jpg")
							img(src="/public/img/logo3.jpg")
						span.josefin#big-text-logo
							b BTW
				div.baskerville.subheading-color#navigation-bar
					nav
						ul
							li
								a(href='/') Home
							li
								a(href='/projects') Projects
							li
								a Notes
							li
								a(href='/timeline') Timeline
							li.no-border
								a(href='/resume') Re&#769sume&#769
				div.centurygothic.wrapword.centered-div#display
					q#the-quote
					span#quoted-from
				div#footer-container
					div.flex#socmed-links
						a.fa.fa-facebook-square.sidespread(href='https://www.facebook.com/btara.truhandarien', target='_blank')
						a.fa.fa-linkedin-square.sidespread(href='https://ca.linkedin.com/pub/btara-truhandarien/7b/1a0/980', target='_blank')
					h3.centurygothic#copyright &copy; Btara Truhandarien #{year}. All rights reserved.
			div.container.shadow-boxer#content-background
				div.container.centered-div#content-container
					article.centered-div#content
						h1.palatino #{headline}
						block page_content
